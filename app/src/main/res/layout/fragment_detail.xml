<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tempat"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/profile_reichan"/>

        <TextView
            android:id="@+id/nama_tempat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Gunung Tangkuban Parahu"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_location_on_24"/>

            <TextView
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="diisi dengan alamat tempat destinasi"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="Diisi dengan jam akses tempat destinasi"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="Deskripsi"/>

        <TextView
            android:id="@+id/desc_tempat"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="Bagian ini diisi dengan deskripsi tempat destinasi"/>


    </LinearLayout>

</FrameLayout>